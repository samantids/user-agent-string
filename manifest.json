{
	"manifest_version": 2,

	"name": "User Agent String Parser",
	"description": "Convert a user agent string to browser and OS information.",
	"version": "1.0.1",

	"icons": {
		"20": "icon_20.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	},

	"browser_action": {
		"default_icon": "icon_20.png",
		"default_popup": "popup.html"
	},

	"permissions": [
		"storage",
		"https://api.whatismybrowser.com/*",
		"http://api.whatismybrowser.com/*"
	]	

}